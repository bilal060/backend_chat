<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Controller" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Disable default action bar to allow Toolbar usage -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Controller.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="Theme.Controller.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
