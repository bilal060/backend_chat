<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_permissions_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_settings_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/tv_permissions_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_settings_subtitle"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tv_runtime_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_app_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_app_settings"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_notification_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_notification_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_notification_settings"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_accessibility_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_accessibility_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_accessibility_settings"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_usage_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_usage_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_usage_settings"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_battery_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_battery_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_battery_settings"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="16dp" />

        <TextView
            android:id="@+id/tv_device_admin_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_status_checking"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_open_device_admin_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_open_device_admin_settings"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
